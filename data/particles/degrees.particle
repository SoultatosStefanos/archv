particle_system Degrees/SmallRingWhite
{
	quota	10000
	material	Particles/Flare
	particle_width	0.5
	particle_height	0.5
	cull_each	true
	renderer	billboard
	sorted	true
	local_space	true
	billboard_type	point
    billboard_origin center

	emitter Ring
	{
		angle	0
        colour 0.5 0.5 0.5
		direction	0 0 1
		emission_rate	450
		position	0 0 0
		velocity_min	20
		velocity_max	30
		time_to_live	1
		duration	0
		repeat_delay 1

        width 6
        height 6
        depth 6
        inner_width 0.2
        inner_height 0.2
	}

    affector LinearForce
    {
        force_vector 0 0 0
        force_application add
    }

}
